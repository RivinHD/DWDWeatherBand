                            <ComboBox x:Name="FontChooser" HorizontalAlignment="Right" VerticalAlignment="Center" Width="160" Padding="2,2,2,2" VerticalContentAlignment="Center" Margin="0,0,5,0" ItemsSource="{Binding Source={x:Static Fonts.SystemFontFamilies}}" SelectedValue="{Binding Path=Default.FontFamily}" SelectedValuePath="Source" SelectionChanged="FontChooser_SelectionChanged" StaysOpenOnEdit="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel />
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" FontFamily="{Binding}" VerticalAlignment="Center" TextWrapping="Wrap" Height="18" Padding="0,2,0,2"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>
                        <Grid MinWidth="280" HorizontalAlignment="Left">
                            <Label Content="Update Intervall" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                            <TextBox x:Name="UpdateIntervall" HorizontalAlignment="Right" TextWrapping="Wrap" Text="60 seconds" Width="160" VerticalAlignment="Center" Padding="2,2,2,2" Margin="0,0,5,0" LostFocus="UpdateIntervall_TextChanged" PreviewKeyDown="UpdateIntervall_PreviewKeyDown"/>
                        </Grid>
                        <Grid MinWidth="280" HorizontalAlignment="Left">
                            <Label Content="Error Intervall" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                            <TextBox x:Name="ErrorIntervall" HorizontalAlignment="Right" TextWrapping="Wrap" Text="5 seconds" Width="160" VerticalAlignment="Center" Padding="2,2,2,2" Margin="0,0,5,0" LostFocus="ErrorIntervall_TextChanged" PreviewKeyDown="ErrorIntervall_PreviewKeyDown"/>
                        </Grid>
                        <Grid MinWidth="280" HorizontalAlignment="Left">
                            <Label Content="How Init" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                            <ComboBox x:Name="HowInit" HorizontalAlignment="Right" VerticalAlignment="Center" SelectedIndex="0" SelectedValuePath="Content" Width="160" Padding="2,2,2,2" Margin="0,0,5,0" StaysOpenOnEdit="True" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" SelectionChanged="HowInit_SelectionChanged">
                                <ComboBoxItem>Automatic</ComboBoxItem>
                                <ComboBoxItem>GeoLocation</ComboBoxItem>
                            </ComboBox>
                        </Grid>
                        <Grid MinWidth="280" HorizontalAlignment="Left" Visibility="{Binding SelectedValue, ConverterParameter=GeoLocation, Converter={StaticResource CompareVisibilityConverter}, ElementName=HowInit}">
                            <Label Content="Latitude" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                            <TextBox x:Name="Latitude" HorizontalAlignment="Right" TextWrapping="Wrap" Text="52.5200" Width="160" VerticalAlignment="Center" Padding="2,2,2,2" Margin="0,0,5,0" LostFocus="Latitude_TextChanged" PreviewKeyDown="Latitude_PreviewKeyDown"/>
                        </Grid>
                        <Grid MinWidth="280" HorizontalAlignment="Left" Visibility="{Binding SelectedValue, ConverterParameter=GeoLocation, Converter={StaticResource CompareVisibilityConverter}, ElementName=HowInit}">
                            <Label Content="Longitude" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                            <TextBox x:Name="Longitude" HorizontalAlignment="Right" TextWrapping="Wrap" Text="13.4050" Width="160" VerticalAlignment="Center" Padding="2,2,2,2" Margin="0,0,5,0" LostFocus="Longitude_TextChanged" PreviewKeyDown="Longitude_PreviewKeyDown"/>
                        </Grid>
                    </StackPanel>
                </Expander>
                <Expander Header="Taskbar Configuration">
                    <StackPanel>
                        <Grid MinWidth="280" HorizontalAlignment="Left">
                            <Label Content="Show Icon" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                            <CheckBox HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0" IsChecked="True"/>
                        </Grid>
                        <Grid MinWidth="280" HorizontalAlignment="Left">
                            <Label Content="Show Max/Min Temperature" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                            <CheckBox HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0" IsChecked="True"/>
                        </Grid>
                        <Grid MinWidth="280" HorizontalAlignment="Left">
                            <Label Content="Show Humidity" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                            <CheckBox HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0" IsChecked="True"/>
                        </Grid>
                        <Grid MinWidth="280" HorizontalAlignment="Left">
                            <Label Content="Show Precipitation" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                            <CheckBox HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0" IsChecked="True"/>
                        </Grid>
                        <Grid MinWidth="280" HorizontalAlignment="Left">
                            <Label Content="Show Wind speed" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                            <CheckBox HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0" IsChecked="True"/>
                        </Grid>
                    </StackPanel>
                </Expander>
                <Expander Header="Theme">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox x:Name="ThemeSelector" MinWidth="200" ItemsSource="{Binding Source={StaticResource Themes}}" SelectionChanged="ThemeSelector_SelectionChanged" LostFocus="ThemeSelector_TextChanged" PreviewKeyDown="ThemeSelector_PreviewKeyDown" DropDownOpened="ThemeSelector_TextChanged"/>
                            <Button x:Name="ThemeNew" Content="New Theme" Click="ThemeNew_Click"/>
                            <Button x:Name="ThemeRemove" Content="Remove" Click="ThemeRemove_Click"/>
                        </StackPanel>
                        <Grid MinWidth="280">
                            <Label Content="Foreground"/>
                            <xctk:ColorPicker Width="100" x:Name="ColorForeground" HorizontalAlignment="Right" ShowDropDownButton="True" Closed="ColorForeground_Closed"/>
                        </Grid>
                        <Grid MinWidth="280">
                            <Label Content="DisabledForeground"/>
                            <xctk:ColorPicker Width="100" x:Name="ColorDisabledForeground" HorizontalAlignment="Right" Closed="ColorDisabledForeground_Closed"/>
                        </Grid>
                        <Grid MinWidth="280">
                            <Label Content="SelectedForeground"/>
                            <xctk:ColorPicker Width="100" x:Name="ColorSelectedForeground" HorizontalAlignment="Right" Closed="ColorSelectedForeground_Closed"/>
                        </Grid>
                        <Grid MinWidth="280">
                            <Label Content="Background"/>
                            <xctk:ColorPicker Width="100" x:Name="ColorBackground" HorizontalAlignment="Right" Closed="ColorBackground_Closed"/>
                        </Grid>
                        <Grid MinWidth="280">
                            <Label Content="BackgroundDark"/>
                            <xctk:ColorPicker Width="100" x:Name="ColorBackgroundDark" HorizontalAlignment="Right" Closed="ColorBackgroundDark_Closed"/>
                        </Grid>
                        <Grid MinWidth="280">
                            <Label Content="BackgroundLight"/>
                            <xctk:ColorPicker Width="100" x:Name="ColorBackgroundLight" HorizontalAlignment="Right" Closed="ColorBackgroundLight_Closed"/>
                        </Grid>
                    </StackPanel>
                </Expander>
                <Button x:Name="restoreDefault" Content="Restore Default" Margin="10,2,5,5" Click="RestoreDefault_Click"/>
            </StackPanel>
        </TabItem>
    </TabControl>
</UserControl>
