<UserControl x:Name="userControl" x:Class="DWDWeatherBand.InformationPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:DWDWeatherBand"
             mc:Ignorable="d"
             Unloaded="WriteSettings">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <local:MoveToBorderConverter x:Key="MoveToBorderConverter"/>
            <local:CompareVisibilityConverter x:Key="CompareVisibilityConverter"/>
            <local:SubtractConverter x:Key="SubtractConverter"/>
            <local:ScaleDownConverterLeft x:Key="ScaleDownConverterLeft"/>
            <local:Themes x:Key="Themes"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <TabControl>
        <TabItem Header="Weather" PreviewMouseLeftButtonUp="TabItem_MouseLeftButtonUp" PreviewMouseLeftButtonDown="TabItem_MouseLeftButtonDown">
            <Grid x:Name="WeatherDisplay" Width="800" Height="750" Loaded="WeatherDisplay_Loaded" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <Canvas x:Name="canvasTemperaturPrecipitation" Grid.Row="0">
                    <Grid d:Width="800" d:Height="370" x:Name="canvasPrecipitation" Width="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Height="{Binding ActualHeight, ConverterParameter=20, Converter={StaticResource SubtractConverter}, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Margin="0,10,0,10">
                        <!--<Rectangle Width="5" Height="100" Fill="{StaticResource BrushSelectedForegroundColor}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="-10,0,0,0" Stroke="{StaticResource BrushBackgroundColor}" StrokeThickness="0.5"/>-->
                    </Grid>

                    <Grid x:Name="gridCanvasTP" d:Width="800" d:Height="370" Width="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Height="{Binding ActualHeight, ConverterParameter=20, Converter={StaticResource SubtractConverter}, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Margin="0,10,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Style="{StaticResource LineBold}"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="1" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="2" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="3" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="4" Style="{StaticResource LineThinDotted}"/>
                        </Grid>

                        <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="1" Style="{StaticResource LineBold}"/>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="1" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="2" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="3" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="4" Style="{StaticResource LineThinDotted}"/>
                        </Grid>

                        <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="2" Style="{StaticResource LineBold}" />
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="1" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="2" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="3" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="4" Style="{StaticResource LineThinDotted}"/>
                        </Grid>

                        <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="3" Style="{StaticResource LineBold}"/>
                        <Grid Grid.Row="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="1" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="2" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="3" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="4" Style="{StaticResource LineThinDotted}"/>
                        </Grid>

                        <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="4" Style="{StaticResource LineBold}"/>
                        <Grid Grid.Row="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="1" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="2" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="3" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="4" Style="{StaticResource LineThinDotted}"/>
                        </Grid>

                        <Line X2="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Grid.Row="4" VerticalAlignment="Bottom" Style="{StaticResource LineBold}" Margin="0,0,0,-0.5"/>
                    </Grid>

                    <Line x:Name="CurrentIndikatorTP" Y2="{Binding ActualHeight, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Style="{StaticResource LineBold}" X1="100" X2="100" d:Visibility="Visible" Visibility="Hidden"/>

                    <Grid Margin="0,10,0,10">
                        <Path x:Name="TemperaturGraph" d:Data="M -10,0 L -10,295 M 0,100 10,200 40,200 60,100 60,100 80,0 80.5,0 100,294.5 100.5,294.5 120,290">
                            <Path.Stroke>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF7D00FF" Offset="1"/>
                                    <GradientStop Color="#FF0027FF" Offset="0.8"/>
                                    <GradientStop Color="#FF008FBF" Offset="0.6"/>
                                    <GradientStop Color="#FF00B500" Offset="0.4"/>
                                    <GradientStop Color="Yellow" Offset="0.2"/>
                                    <GradientStop Color="Red"/>
                                </LinearGradientBrush>
                            </Path.Stroke>
                        </Path>
                    </Grid>

                    <Grid d:Width="800" d:Height="370" Width="{Binding ActualWidth, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Height="{Binding ActualHeight, ConverterParameter=20, Converter={StaticResource SubtractConverter}, ElementName=canvasTemperaturPrecipitation, Mode=OneWay}" Margin="0,10,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <Label Content="Temperatur &amp; Precipitation" Style="{StaticResource Transparent50}" VerticalAlignment="Top" HorizontalAlignment="Center" Padding="4,1,4,1" Margin="0,-13,0,0" FontWeight="Bold"/>

                        <Label x:Name="LabelTemperatur5" Content="30 °C" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="4,1,4,1" Height="18" Margin="0,-9,0,0" Style="{StaticResource Transparent50}"/>
                        <Label x:Name="LabelPrecipitation5" Content="5 mm/h" Margin="0,-9,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Padding="4,1,4,1" Height="18" Style="{StaticResource Transparent50}"/>

                        <Label x:Name="LabelTemperatur4" Content="25 °C" Margin="0,-9,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="4,1,4,1" Height="18" Style="{StaticResource Transparent50}"/>
                        <Label x:Name="LabelPrecipitation4" Content="4 mm/h" Margin="0,-9,0,0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right" Padding="4,1,4,1" Height="18" Style="{StaticResource Transparent50}"/>

                        <Label x:Name="LabelTemperatur3" Content="18 °C" Margin="0,-9,0,0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="4,1,4,1" Height="18" Style="{StaticResource Transparent50}"/>
                        <Label x:Name="LabelPrecipitation3" Content="3 mm/h" Margin="0,-9,0,0" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Right" Padding="4,1,4,1" Height="18" Style="{StaticResource Transparent50}"/>

                        <Label x:Name="LabelTemperatur2" Content="15 °C" Margin="0,-9,0,0" Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="4,1,4,1" Height="18" Style="{StaticResource Transparent50}"/>
                        <Label x:Name="LabelPrecipitation2" Content="2 mm/h" Margin="0,-9,0,0" Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Right" Padding="4,1,4,1" Height="18" Style="{StaticResource Transparent50}"/>

                        <Label x:Name="LabelTemperatur1" Content="10 °C" Margin="0,-9,0,0" Grid.Row="4" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="4,1,4,1" Height="18" Style="{StaticResource Transparent50}"/>
                        <Label x:Name="LabelPrecipitation1" Content="1 mm/h" Margin="0,-9,0,0" Grid.Row="4" VerticalAlignment="Top" HorizontalAlignment="Right" Padding="4,1,4,1" Height="18" Style="{StaticResource Transparent50}"/>

                        <Label x:Name="LabelTemperatur0" Content="5 °C" Grid.Row="4" VerticalAlignment="Bottom" HorizontalAlignment="Left" Padding="4,1,4,1" Height="18" Margin="0,0,0,-9" Style="{StaticResource Transparent50}"/>
                        <Label x:Name="LabelPrecipitation0" Content="0 mm/h" Grid.Row="4" VerticalAlignment="Bottom" HorizontalAlignment="Right" Padding="4,1,4,1" Height="18" Margin="0,0,0,-9" Style="{StaticResource Transparent50}"/>
                    </Grid>
                </Canvas>

                <Canvas x:Name="canvasWindHumidity" Grid.Row="2">
                    <Grid d:Width="800" d:Height="370" x:Name="canvasHumidity" Width="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Height="{Binding ActualHeight, ConverterParameter=20, Converter={StaticResource SubtractConverter}, ElementName=canvasWindHumidity, Mode=OneWay}" Margin="0,10,0,10">
                        <!--<Rectangle Width="5" Height="100" Fill="{StaticResource BrushSelectedForegroundColor}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="-10,0,0,0" Stroke="{StaticResource BrushBackgroundColor}" StrokeThickness="0.5"/>-->
                    </Grid>

                    <Grid x:Name="gridCanvasWH" d:Width="800" d:Height="370" Width="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Height="{Binding ActualHeight, ConverterParameter=20, Converter={StaticResource SubtractConverter}, ElementName=canvasWindHumidity, Mode=OneWay}" Margin="0,10,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Style="{StaticResource LineBold}"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="1" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="2" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="3" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="4" Style="{StaticResource LineThinDotted}"/>
                        </Grid>

                        <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="1" Style="{StaticResource LineBold}"/>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="1" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="2" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="3" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="4" Style="{StaticResource LineThinDotted}"/>
                        </Grid>

                        <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="2" Style="{StaticResource LineBold}" />
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="1" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="2" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="3" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="4" Style="{StaticResource LineThinDotted}"/>
                        </Grid>

                        <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="3" Style="{StaticResource LineBold}"/>
                        <Grid Grid.Row="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="1" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="2" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="3" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="4" Style="{StaticResource LineThinDotted}"/>
                        </Grid>

                        <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="4" Style="{StaticResource LineBold}"/>
                        <Grid Grid.Row="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="1" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="2" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="3" Style="{StaticResource LineThinDotted}"/>
                            <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="4" Style="{StaticResource LineThinDotted}"/>
                        </Grid>

                        <Line X2="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Grid.Row="4" VerticalAlignment="Bottom" Style="{StaticResource LineBold}" Margin="0,0,0,-0.5"/>
                    </Grid>

                    <Line x:Name="CurrentIndikatorWH" Y2="{Binding ActualHeight, ElementName=canvasWindHumidity, Mode=OneWay}" Style="{StaticResource LineBold}" X1="100" X2="100" d:Visibility="Visible" Visibility="Hidden"/>

                    <Grid Margin="0,10,0,10">
                        <Path x:Name="WindGraph" d:Data="M -10,0 L -10,295 M 0,100 10,200 40,200 60,100 60,100 80,0 80.5,0 100,294.5 100.5,294.5 120,290">
                            <Path.Stroke>
                                <SolidColorBrush Color="White"/>
                            </Path.Stroke>
                        </Path>
                        <Path x:Name="WindMaxGraph" d:Data="M -10,0 L -10,295 M 0,100 10,200 40,200 60,100 60,100 80,0 80.5,0 100,294.5 100.5,294.5 120,290">
                            <Path.Stroke>
                                <SolidColorBrush Color="Red"/>
                            </Path.Stroke>
                        </Path>
                    </Grid>

                    <Grid d:Width="800" d:Height="370" Width="{Binding ActualWidth, ElementName=canvasWindHumidity, Mode=OneWay}" Height="{Binding ActualHeight, ConverterParameter=20, Converter={StaticResource SubtractConverter}, ElementName=canvasWindHumidity, Mode=OneWay}" Margin="0,10,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <Label Content="Wind, Gust &amp; Humidity" Style="{StaticResource Transparent50}" VerticalAlignment="Top" HorizontalAlignment="Center" Padding="4,1,4,1" Margin="0,-13,0,0" FontWeight="Bold"/>

                        <Label x:Name="LabelWind5" Content="25 km/h" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="4,1,4,1" Height="18" Margin="0,-9,0,0" Style="{StaticResource Transparent50}"/>
                        <Label x:Name="LabelHumidity5" Content="100 %" Margin="0,-9,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Padding="4,1,4,1" Height="18" Style="{StaticResource Transparent50}"/>

                        <Label x:Name="LabelWind4" Content="20 km/h" Margin="0,-9,0,0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="4,1,4,1" Height="18" Style="{StaticResource Transparent50}"/>
                        <Label x:Name="LabelHumidity4" Content="80 %" Margin="0,-9,0,0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right" Padding="4,1,4,1" Height="18" Style="{StaticResource Transparent50}"/>

                        <Label x:Name="LabelWind3" Content="15 km/h" Margin="0,-9,0,0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="4,1,4,1" Height="18" Style="{StaticResource Transparent50}"/>
                        <Label x:Name="LabelHumidity3" Content="60 %" Margin="0,-9,0,0" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Right" Padding="4,1,4,1" Height="18" Style="{StaticResource Transparent50}"/>

                        <Label x:Name="LabelWind2" Content="10 km/h" Margin="0,-9,0,0" Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="4,1,4,1" Height="18" Style="{StaticResource Transparent50}"/>
                        <Label x:Name="LabelHumidity2" Content="40 %" Margin="0,-9,0,0" Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Right" Padding="4,1,4,1" Height="18" Style="{StaticResource Transparent50}"/>

                        <Label x:Name="LabelWind1" Content="5 km/h" Margin="0,-9,0,0" Grid.Row="4" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="4,1,4,1" Height="18" Style="{StaticResource Transparent50}"/>
                        <Label x:Name="LabelHumidity1" Content="20 %" Margin="0,-9,0,0" Grid.Row="4" VerticalAlignment="Top" HorizontalAlignment="Right" Padding="4,1,4,1" Height="18" Style="{StaticResource Transparent50}"/>

                        <Label x:Name="LabelWind0" Content="0 km/h" Grid.Row="4" VerticalAlignment="Bottom" HorizontalAlignment="Left" Padding="4,1,4,1" Height="18" Margin="0,0,0,-9" Style="{StaticResource Transparent50}"/>
                        <Label x:Name="LabelHumidity0" Content="0 %" Grid.Row="4" VerticalAlignment="Bottom" HorizontalAlignment="Right" Padding="4,1,4,1" Height="18" Margin="0,0,0,-9" Style="{StaticResource Transparent50}"/>
                    </Grid>
                </Canvas>

                <Grid x:Name="PrecipitationProbability" Grid.Row="1" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" x:Name="PrecipitationProbability0" Content="15 %" VerticalAlignment="Bottom" Padding="0,0,0,0" Style="{StaticResource Transparent}" HorizontalAlignment="Left"/>
                    <Label Grid.Column="1" x:Name="PrecipitationProbability1" Content="15 %" VerticalAlignment="Bottom" Padding="0,0,0,0" Style="{StaticResource Transparent}" HorizontalAlignment="Left" Margin="{Binding ActualWidth, ConverterParameter=-2, Converter={StaticResource ScaleDownConverterLeft}, Mode=OneWay, RelativeSource={RelativeSource Self}}"/>
                    <Label Grid.Column="2" x:Name="PrecipitationProbability2" Content="15 %" VerticalAlignment="Bottom" Padding="0,0,0,0" Style="{StaticResource Transparent}" HorizontalAlignment="Left" Margin="{Binding ActualWidth, ConverterParameter=-2, Converter={StaticResource ScaleDownConverterLeft}, Mode=OneWay, RelativeSource={RelativeSource Self}}"/>
                    <Label Grid.Column="3" x:Name="PrecipitationProbability3" Content="15 %" VerticalAlignment="Bottom" Padding="0,0,0,0" Style="{StaticResource Transparent}" HorizontalAlignment="Left" Margin="{Binding ActualWidth, ConverterParameter=-2, Converter={StaticResource ScaleDownConverterLeft}, Mode=OneWay, RelativeSource={RelativeSource Self}}"/>
